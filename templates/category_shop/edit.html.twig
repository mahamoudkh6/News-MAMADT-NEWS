{% extends 'layoutShop.html.twig' %}

{% block title %}Éditer la catégorie {{ category.name }}{% endblock %}

{% block content %}
    <h1>Éditer la catégorie {{ category.name }}</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}

    <a href="{{ path('products_by_category', {'categoryId': category.id}) }}">Retour à la liste des produits</a>
{% endblock %}
