{% extends 'layoutShop.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}

    <div class="container">
        <article class="col-md-8 maincontent">

				<header class="page-header">
					<h1>Connexion</h1>
				</header> <br>

                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            {#<h5 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h5>#}
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required><br>
                            <input type="hidden" name="_csrf_token"  value="{{ csrf_token('authenticate') }}">
                            <button class="btn btn-secondary" type="submit">   Sign in  </button><br>
                        </form>

      <br>  </article>
    </div>


{% endblock %}
